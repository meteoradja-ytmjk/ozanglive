<script>
  document.addEventListener('DOMContentLoaded', () => {
    // CRITICAL: Ensure scroll is always enabled on page load
    // This prevents stuck overflow:hidden from modals
    function forceScrollEnabled() {
      // Remove any inline overflow styles
      document.body.style.removeProperty('overflow');
      document.documentElement.style.removeProperty('overflow');

      // Force scroll to be enabled
      if (window.innerWidth < 1024) {
        // Mobile: ensure scroll is always enabled
        document.body.style.setProperty('overflow-y', 'scroll', 'important');
        document.body.style.setProperty('overflow-x', 'hidden', 'important');
      }
    }

    // Force scroll on load
    forceScrollEnabled();

    // Monitor for any changes to body overflow and fix them
    const observer = new MutationObserver((mutations) => {
      mutations.forEach((mutation) => {
        if (mutation.type === 'attributes' && mutation.attributeName === 'style') {
          const bodyOverflow = document.body.style.overflow;
          if (bodyOverflow === 'hidden' && window.innerWidth < 1024) {
            // On mobile, if something sets overflow to hidden, wait a bit then restore scroll
            setTimeout(forceScrollEnabled, 100);
          }
        }
      });
    });

    // Start observing body for style changes
    observer.observe(document.body, {
      attributes: true,
      attributeFilter: ['style']
    });

    // Desktop profile dropdown
    const profileButton = document.getElementById('profile-menu-button');
    const profileDropdown = document.getElementById('profile-dropdown');
    if (profileButton && profileDropdown) {
      profileButton.addEventListener('click', (e) => {
        e.stopPropagation();
        profileDropdown.classList.toggle('hidden');
      });
      document.addEventListener('click', (e) => {
        if (!profileDropdown.contains(e.target) && !profileButton.contains(e.target)) {
          profileDropdown.classList.add('hidden');
        }
      });
    }

    // Mobile profile popup - Fixed for touch devices
    const mobileProfileBtn = document.getElementById('mobile-profile-btn');
    const mobileProfilePopup = document.getElementById('mobile-profile-popup');

    if (mobileProfileBtn && mobileProfilePopup) {
      // Toggle popup on click/touch
      mobileProfileBtn.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();

        const isVisible = mobileProfilePopup.style.display === 'block';

        if (isVisible) {
          mobileProfilePopup.style.display = 'none';
        } else {
          mobileProfilePopup.style.display = 'block';
        }
      });

      // Also handle touchend for better mobile response
      mobileProfileBtn.addEventListener('touchend', (e) => {
        e.preventDefault();
        e.stopPropagation();

        const isVisible = mobileProfilePopup.style.display === 'block';

        if (isVisible) {
          mobileProfilePopup.style.display = 'none';
        } else {
          mobileProfilePopup.style.display = 'block';
        }
      }, { passive: false });

      // Close popup when clicking outside
      document.addEventListener('click', (e) => {
        if (!mobileProfilePopup.contains(e.target) && !mobileProfileBtn.contains(e.target)) {
          mobileProfilePopup.style.display = 'none';
        }
      });

      // Close popup when touching outside
      document.addEventListener('touchstart', (e) => {
        if (!mobileProfilePopup.contains(e.target) && !mobileProfileBtn.contains(e.target)) {
          mobileProfilePopup.style.display = 'none';
        }
      }, { passive: true });
    }

    const uploadKeys = {
      video: 'streamflowUploadState:video',
      audio: 'streamflowUploadState:audio'
    };
    const uploadOwnerKey = 'streamflowUploadOwner';
    const activePage = document.body.dataset.active;
    const floatingContainer = document.getElementById('globalUploadFloating');
    const navHint = document.getElementById('globalUploadNavHint');
    const videoCard = document.getElementById('globalVideoUploadCard');
    const audioCard = document.getElementById('globalAudioUploadCard');

    function getUploadState(key) {
      const raw = localStorage.getItem(key);
      if (!raw) return null;
      try {
        return JSON.parse(raw);
      } catch (error) {
        return null;
      }
    }

    function updateUploadCard(type, state) {
      if (activePage === 'gallery') {
        if (floatingContainer) floatingContainer.classList.add('hidden');
        return false;
      }

      const isVideo = type === 'video';
      const card = isVideo ? videoCard : audioCard;
      const statusEl = document.getElementById(isVideo ? 'globalVideoStatus' : 'globalAudioStatus');
      const barContainer = document.getElementById(isVideo ? 'globalVideoProgressBar' : 'globalAudioProgressBar');
      const bar = barContainer?.querySelector('div');

      if (!state || !card) {
        card?.classList.add('hidden');
        return false;
      }

      card.classList.remove('hidden');
      if (statusEl) statusEl.textContent = state.statusText || 'Uploading...';
      if (state.uploading > 0) {
        barContainer?.classList.remove('hidden');
        if (bar) bar.style.width = `${Math.min(Math.max(state.progress || 0, 0), 100)}%`;
      } else {
        barContainer?.classList.add('hidden');
      }

      return true;
    }

    function renderGlobalUploadStatus() {
      if (!floatingContainer) return;

      const videoState = getUploadState(uploadKeys.video);
      const audioState = getUploadState(uploadKeys.audio);
      const hasVideo = updateUploadCard('video', videoState);
      const hasAudio = updateUploadCard('audio', audioState);

      if (hasVideo || hasAudio) {
        floatingContainer.classList.remove('hidden');
      } else {
        floatingContainer.classList.add('hidden');
      }
    }

    function hasActiveUploads() {
      return Boolean(localStorage.getItem(uploadKeys.video) || localStorage.getItem(uploadKeys.audio));
    }

    function showNavHint() {
      if (!navHint) return;
      navHint.classList.remove('hidden');
      setTimeout(() => navHint.classList.add('hidden'), 2500);
    }

    document.addEventListener('click', (event) => {
      const openGalleryBtn = event.target.closest('[data-open-gallery]');
      if (openGalleryBtn) {
        window.open('/gallery', '_blank');
        return;
      }

      const link = event.target.closest('a');
      if (!link) return;

      const href = link.getAttribute('href');
      const target = link.getAttribute('target');
      if (!href || !href.startsWith('/') || target === '_blank') return;

      const uploadOwner = localStorage.getItem(uploadOwnerKey);
      const isOwnerTab = uploadOwner && uploadOwner === window.streamflowTabId;
      if (isOwnerTab && hasActiveUploads()) {
        event.preventDefault();
        window.open(href, '_blank');
        showNavHint();
      }
    });

    window.addEventListener('storage', (event) => {
      if (event.key === uploadKeys.video || event.key === uploadKeys.audio) {
        renderGlobalUploadStatus();
      }
    });

    renderGlobalUploadStatus();
  });
</script>
